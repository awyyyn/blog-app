# This file is generated by Nx.
#
# Build the docker image with `npx nx docker-build blog-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t blog-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system blog-app && \
          adduser --system -G blog-app blog-app

COPY dist/apps/blog-app blog-app
RUN chown -R blog-app:blog-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix blog-app --omit=dev -f install

CMD [ "node", "blog-app" ]
